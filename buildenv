export ZOPEN_STABLE_URL="https://github.com/cli/cli.git"
export ZOPEN_STABLE_DEPS="comp_go make"
export ZOPEN_DEV_URL="https://github.com/cli/cli.git"
export ZOPEN_DEV_DEPS="comp_go make"
export ZOPEN_BUILD_LINE="STABLE"

export ZOPEN_BOOTSTRAP="skip"
export ZOPEN_CONFIGURE="skip"
export ZOPEN_MAKE_OPTS="script/build"
export ZOPEN_CHECK_OPTS="test"

zopen_init()
{
  # Go installs binaries, so create the bin dir as well
  unset CC CXX
  export CGO_ENABLED=0 # disable C Go as it's not needed 
}

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  # Echo the following information to gauge build health
  echo "actualFailures:0"
  echo "totalTests:1"
  echo "expectedFailures:0"
  echo "expectedTotalTests:1"
}

zopen_get_version()
{
  # Modify to echo the version of your tool/library
  # Rather than hardcoding the version, obtain the version by running the tool/library
  echo "1.0.0"
}
